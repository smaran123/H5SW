<%= form_for(@business) do |f| %>
  <% if @business.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@business.errors.count, "error") %> <%= t('businesses.form.error') %></h2>

      <ul>
      <% @business.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
   <div class="field">
	<%= f.label :biz_type,t('businesses.form.business_type') %>
        <%= f.text_field :biz_type%>
   </div>

<div class ="actions">
    <%= f.submit :Save,:class=>"btn btn-small btn-success" %>
</div>

<% end %>
