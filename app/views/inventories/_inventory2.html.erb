<%= form_for inventory,:url => inventory_path(inventory),:method => 'PUT',:remote => true do |f| %>
  <%= f.text_field :itemtype,:style => 'width:98px;height:12px;' %><br/>
  <%= f.submit t('inventories.inventory2.update'), :class => "btn btn-small btn-primary" %>
  <%= link_to_function t('inventories.inventory2.cancel'),"cancel_update_itemtype('#{inventory.id}','#{inventory.itemtype}')", :class => "btn btn-mini btn-primary" %>
<% end %>
  