<ul class = "nav nav-tabs" id="job_tabs">
  <li class = <%= params[:controller] == "jobs" && (params[:action] == "new" || params[:action] == "edit")? 'active' : '' %> >
    <% if session[:job_id] %>
      <%= link_to t('.job'), edit_job_path(session[:job_id]), :title => "Job edit page" %>
    <% else %>
      <%= link_to t('.job'), new_job_path, :title => "Job new page"  %>
    <% end %>
  </li>

  <li class =" <%= params[:controller] == "notes" ? 'active' : ''  %> ">
    <%= link_to t('.note'), notes_path(:type => "Job"), :title => "list job notes" %>
  </li>

  <li class = "<%= params[:controller] == "jobtimes" ? 'active' : '' %> ">
    <%= link_to t('.time'),  jobtimes_path,:title => "time"%>
  </li>

  <li class="<%= params[:controller] == "inventories" ? 'active' : ''  %> " >
    <%= link_to t('.item'), inventories_path, :title => "list items" %>
  </li>

  <li class = <%= params[:controller] == "documents" ? 'active' : '' %> >
    <%= link_to t('.document'), documents_path(:type => "Job"), :title => "list job documents" %>
  </li>

  <li class = <%= params[:controller] == "customs" ? 'active' : '' %> >
    <% tab = current_login.tabs.find_by_tab_type("Job") %>
    <% if tab.present? %>
      <%= link_to t('.custom'), customs_path(:type => "Job", :tab => tab.id ), :title => "custom page" %>
    <% else %>
      <%= link_to t('.custom'), new_tab_customs_path(:type=> "Job"), :title => "Create tabs for job" %>
    <% end %>
  </li>
  
  <li>
     <%= link_to "Customer info", edit_customer_path(session[:customer_id]) %>
  </li>
</ul>

