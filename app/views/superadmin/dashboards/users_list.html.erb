<table class="table table-striped" style="border:1px solid;">
  <tr>
    <th colspan="8"><span style="font-size:20px;">User Details</span></th>
  </tr>
  <tr>
    <th>Name</th>
    <th>Emp/Vendor</th>
    <th>Accounting Name</th>
    <th>Email</th>
    <th>Smo User</th>
    <th>Company Name</th>
    <th>Role</th>
  </tr>
  
  <% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.accounting_type %></td>
    <td><%= user.accounting_name %></td>
    <td><%= user.email %></td>
    <td><%= user.smo_user %></td>
    <td><%= user.company.name %></td>
    <td> <% if user.role_id.present? %>
      <%= user.role.roll %>
      <% end %>
    </td>
  </tr>
   <% end %>
 
</table>


<p>
  Download:
  <%= link_to "CSV",  users_list_superadmin_dashboards_path(format: "csv"),:class => "btn btn-small btn-primary" %> 
  <%= link_to "Excel",  users_list_superadmin_dashboards_path(format: "xls"),:class => "btn btn-small btn-primary" %>
</p>
<style>
table{
    border:1px solid #CCC;
    width: 100%;
}

tr, td, th {
    border: none;
}

td, th{
    padding: 5px;
    font-style: Times New Roman;
    font-size: 13px;
}

tr.heading{
    background: #777777;
    color:#FFF;
}

tr.even{
    background: #FCFCFC;
}

tr.odd{
    background: #CCC;
}
</style>