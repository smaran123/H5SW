<%= form_for(@customer) do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> <%= t('customers.form.error') %></h2>

      <ul>
        <% @customer.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if @customer_old_name %>
    <%= hidden_field_tag "customer_name", nil, :value => @customer_old_name %>
  <% end %>

  <div class="field">
    <%= f.label :types, t('customers.form.type') %>
    <%= f.select :types, options_for_select([["Prospect"],["Customer"],["Job site"]],:selected => @customer.types)%>
  </div>


  <div class="field">
    <%= f.label :company_name,t('customers.form.company') %>
    <%= f.text_field :company_name %>
  </div>

  <div class="field">
    <%= f.label :address1,t('customers.form.address1') %>
    <%= f.text_field :address1 %>
  </div>

  <div class="field">
    <%= f.label :Address2, t('customers.form.address2') %>
    <%= f.text_field :address2 %>
  </div>

  <div class="field">
    <span class="span2" ><%= t('customers.form.city') %>  </span>
    <span class="span2" > <%= t('customers.form.state') %> </span>
    <span class="span2" > <%= t('customers.form.zip') %> </span>
    <br/>
      <%=f.text_field :city, :class => "span2", :style => "display:inline" %>
      <%= f.text_field :state, :class => "span2", :style => "display:inline" %>
      <%= f.text_field :zip, :class => "span2", :style => "display:inline" %>
  </div>

  <%#*<div class="field">%>
  <%#= label_tag :contact %>
  <%# if current_login.contacts.empty? %>
  <%#*<span style="color: red;">NO CONTACTS</span>%>
  <%# else %>

  <%#= f.select :contact_id, options_for_select(current_login.contacts.map{|contact| [contact.name, contact.id]},:selected => @customer.contact_id),{}, :onchange => "GetContact(this)" %>

  <%# end %>
  <%#*<div id="contact34">%>
  <%#*</div>%>
  <%#*</div>%>

  <div class="field">
    <%= f.label :account,t('.acc') %>
    <%= f.text_field :account %>
  </div>

  <div class="field">
    <%= f.label :phone%>
    <%= f.text_field :phone1, :size => 3, :maxlength => 3,:value =>@phone1.blank? ? @customer.phone1 : @phone1, :style => "height: 25px;    padding: 3px 10px;width: 50px; ", :onkeyup => "phone_validate(this,2)" %>
    <%= f.text_field :phone2, :size => 3, :maxlength => 3,:value =>@phone2.blank? ? @customer.phone2 : @phone2, :style => "height: 25px;   margin-left: 2px;  width: 50px;  margin-top: 0px; padding: 3px 10px;", :onkeyup => "phone_validate(this,3)" %>
    <%= f.text_field :phone3, :size => 4, :maxlength => 4,:value =>@phone3.blank? ? @customer.phone3 : @phone3, :style => "height: 25px;  margin-left: 2px;   width: 50px;  margin-top: 0px;   padding: 3px 10px;", :onkeyup => "phone_validate(this,3)" %>
    <%= f.text_field :phone4, :size => 4, :maxlength => 4,:value =>@phone4.blank? ? @customer.phone4 : @phone4, :style => "height: 25px;    padding: 3px 10px; width: 50px;  margin-left: 2px;margin-top: 0px;", :onkeyup => "phone_validate(this,4)", :placeholder => "Ext.." %>
  </div>


  <div class="field">
    <label><%= t('customers.form.web') %><span style='color:green'> &nbsp; &nbsp; must start with (http:// OR https://)</span></label>
    <%= f.text_field :website %>
  </div>

  <div class="field">
    <%= f.label :business_type, t('customers.form.business') %>
    <%= f.select :business_type, options_for_select(current_login.businesses.map{|business| [business.biz_type]},:selected => @customer.business_type)%>
  </div>

  <div class="field">
    <%#= f.label :terms_client,t('customers.form.terms')%>
    <%#= f.select :terms_client, options_for_select([["Net 10"],["Net 20"],["Net 30"],["Net 40"],["Net 50"]],:selected => @customer.terms_client)%>
  </div>

  <div class ="field">
    <%= f.label :status,t('customers.form.status') %>
    <%= f.select :status, options_for_select([["Active"]]) %>
  </div>


  <div class="actions">
    <%= f.submit "Save", :class => "btn btn-success" %>
  </div>
<% end %>
